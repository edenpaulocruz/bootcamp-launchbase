{% extends "layout.njk" %}

{% block head %}
  <title>Lessons Manager - Teachers</title>
{% endblock %}

{% block content %}
  <div class="card table-container">
    <a href="/teachers/new">Novo</a>
    <table>
      <thead>
        <tr>
          <th>Nome completo</th>
          <th>Acompanhamento</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        {% for teacher in teachers %}
          <tr>
            <td>
              <span style="background-image: url({{teacher.avatar_url}})"></span>
              {{teacher.name}}
            </td>
            <td>
              {% for service in teacher.services %}
                <span>{{ service }}</span>
              {% endfor %}
            </td>
            <td><a href="teachers/{{teacher.id}}">Detalhes</a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock content %}
