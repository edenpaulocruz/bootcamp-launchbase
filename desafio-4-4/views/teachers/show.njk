{% extends "layout.njk" %}

{% block head %}
  <title>Lessons Manager - Teachers</title>
{% endblock %}

{% block content %}
  <div class="card">
    <section class="avatar" style="background: url({{teacher.avatar_url}}) no-repeat center center / cover"></section>

    <section class="details">
      <h3>Detalhes</h3>
      <div class="item">
        <div>Nome Completo</div>
        <div>{{teacher.name}}</div>
      </div>
      <div class="item">
        <div>Idade</div>
        <div>{{teacher.birth}}</div>
      </div>
      <div class="item">
        <div>Grau de Escolaridade</div>
        <div>{{teacher.graduation}}</div>
      </div>
      <div class="item">
        <div>Tipo de Aula</div>
        <div>{{teacher.class}}</div>
      </div>
      <div class="item">
        <div>Área de Atuação</div>
        <div>
          {% for service in teacher.services %}
            <span>{{ service }}</span>
          {% endfor %}
        </div>
      </div>
    </section>
  </div>
{% endblock %}
